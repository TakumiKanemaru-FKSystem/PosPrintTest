<Page x:Class="PosPrintTest.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PosPrintTest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

  <Grid>
    <Label Content="プリンター名" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top"/>
    <ComboBox Name="comboBox_PrinterNames" materialDesign:HintAssist.Hint="プリンターを選択" Margin="155,10,350,0" VerticalAlignment="Top" />
    <Label Content="印刷幅 (px)" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
    <TextBox Name="textBox_printWidth" materialDesign:HintAssist.Hint="印刷幅" HorizontalAlignment="Left" Margin="155,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    <Label Content="用紙幅 (mm)" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="textBox_paperWidth" materialDesign:HintAssist.Hint="印刷幅" HorizontalAlignment="Left" Margin="155,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
  </Grid>
</Page>
